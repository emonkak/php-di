{
    "name": "emonkak/di",
    "description": "A fast dependency injection library for PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Shota Nozaki",
            "email": "emonkak@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "satooshi/php-coveralls": "^2.0",
        "vimeo/psalm": "~3.11",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Emonkak\\Di\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Emonkak\\Di\\Tests\\": "tests/"
        }
    }
}
